{
  "name": "backend",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "serve": "node build/dev",
    "build": "node build/prod"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "babel-loader": "^8.0.2",
    "eslint": "^5.5.0",
    "eslint-loader": "^2.1.0",
    "eslint-plugin-prettier": "^2.6.2",
    "prettier": "^1.14.2",
    "webpack": "^4.17.2"
  },
  "dependencies": {
    "koa": "^2.5.2",
    "koa-router": "^7.4.0",
    "koa-static": "^5.0.0"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "plugins": [
      "prettier"
    ],
    "extends": [],
    "rules": {
      "no-console": 1,
      "prettier/prettier": [
        "error",
        {
          "singleQuote": true,
          "semi": false,
          "bracketSpacing": false
        }
      ]
    },
    "parserOptions": {
      "parser": "babel-eslint",
      "ecmaVersion": 2017,
      "sourceType": "module",
      "ecmaFeatures": {
        "modules": true
      }
    }
  }
}
